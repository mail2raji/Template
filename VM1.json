{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
    },
    "variables": {
        "VM01Prefix": "10.0.0.0/16",
        "VM01Subnet1Name": "Subnet-1",
        "VM01Subnet1Prefix": "10.0.0.0/24",
        "VM01Subnet2Name": "Subnet-2",
        "VM01Subnet2Prefix": "10.0.1.0/24"
    },
    "resources": [
        {
            "name": "VM01",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [ ],
            "tags": {
                "displayName": "VM01"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('VM01Prefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('VM01Subnet1Name')]",
                        "properties": {
                            "addressPrefix": "[variables('VM01Subnet1Prefix')]"
                        }
                    },
                    {
                        "name": "[variables('VM01Subnet2Name')]",
                        "properties": {
                            "addressPrefix": "[variables('VM01Subnet2Prefix')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
    }
}
